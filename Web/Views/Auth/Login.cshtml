@section scripts{
    <script>
        $().ready(function () {
            $("#loginForm").validate({
                rules: {
                    Email: {
                        required: true
                    },
                    Password: {
                        required: true
                    }
                },
                messages: {
                    Email: {
                        required: "E-posta boş geçilemez!"
                    },
                    Password: {
                        required: "Şifre boş geçilemez!"
                    }
                }
            });
        });
    </script>
}







